<%- include('./partials/header.ejs') %>

<div class="login-page">
<form class="form_class" action="/" method="post">
  <div class="form-group">
    <label for="driving-licence">Driving Licence Number</label>
    <input type="text" class="form-control" id="drivingLicence" name="drivingLicence" value="<%= userDetails.LicenceNumber %>"/>
    <small class="form-text text-muted <%= licence_isvalid ? 'form-text text-muted hidden' : 'form-text text-muted' %>">Enter a valid Driving licence number</small>
  </div>
  <div class="form-group">
    <label for="reference">Booking Reference Number</label>
    <input type="text" class="form-control" id="reference" name="reference" value="<%= userDetails.reference %>" />
    <small class="form-text text-muted <%= postcode_isvalid ? 'form-text text-muted hidden' : 'form-text text-muted' %>">Enter a valid Reference number</small>
  </div>
  <div class="form-group">
    <label for="postcode">Post Code</label>
    <input type="text" class="form-control" value="<%= userDetails.postcode  %>" id="postcode" name="postcode" />
    <small class="form-text text-muted <%= postcode_isvalid ? 'form-text text-muted hidden' : 'form-text text-muted' %>">Enter a valid postcode</small>
  </div>
  <div class="form-group form-check switch">
    <input type="checkbox" class="form-check-input"  id="alert" name="alert" />
    <span class="slider"></span><small id="alert" class="form-text text-muted "
      > Save my details and send me notifications</small>
    
  </div>
  
  <button type="submit" class="btn ">Find  Test!</button>
</form></div>
<%- include('./partials/footer.ejs') %>
